<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/search_element_main_layout_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:backgroundTint="?attr/colorPrimary"
    android:padding="0dp">


    <ImageView
        android:id="@+id/emptyList"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/placeholder_rounded_corners"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/search_screen_title_padding_start"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="66dp">

        <TextView
            android:id="@+id/name"
            style="@style/search_element_song_title_style"
            android:fontFamily="@font/ys_display_regular"
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Naming" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num"
                style="@style/search_element_artist_name_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/defenition"
                android:textSize="13sp"
                tools:ignore="TextContrastCheck" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>