<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Settings -->
    <style name="settings_background">
        <item name="android:background">@color/white</item>
    </style>
    <style name="settings_text_view">
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black_text_settings</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>
    <style name="settings_image_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">@color/icon_color</item>
    </style>
    <style name="settings_back_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">@color/black_text</item>
    </style>

    <style name="settings_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingVertical">@dimen/options_padding</item>
    </style>

    <style name="settings_switch">

    </style>
    <!-- Main -->
    <style name="main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">@dimen/common_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black_text</item>
    </style>
    <style name="main_linear_view">
        <item name="android:background">@color/background_color</item>
    </style>
    <!-- Search Result-->
    <style name="search_element_main_layout_style">
        <item name="android:background">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/search_screen_element_layout_padding</item>
    </style>
    <style name="search_element_song_title_style">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/search_screen_song_text_size</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">400</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="search_element_artist_name_style">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/search_screen_artist_text_size</item>
        <item name="android:textColor">@color/icon_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">400</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!-- Search Error-->
    <style name="search_activity_refresh_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">34dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black_text</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="search_error_text">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textAlignment">center</item>
        <item name="fontWeight">500</item>
        <item name="android:gravity">center</item>
    </style>
    <!--    MARK: - Search Screen-->
    <style name="search_back_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">@color/black_text</item>
    </style>

    <style name="search_header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingLeft">28dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_marginStart">@dimen/common_padding</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:text">@string/search</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="search_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">@color/black_text</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="search_dot">
        <item name="tint">@color/icon_color</item>
    </style>

    <style name="search_edit_text">
        <item name="android:drawableTint">@color/icon_color</item>
        <item name="android:textColorHint">@color/icon_color</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="search_linear_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="search_clear_icon">
        <item name="android:tint">@color/icon_color</item>
    </style>

    <style name="primary_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <!-- Player -->
    <style name="text_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <!-- Media -->
    <style name="MediaCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="playlist_edit_text">
        <item name="android:background">@drawable/place_to_write_something_album</item>
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:drawableTint">@color/icon_color</item>
        <item name="android:textColorHint">@color/icon_color</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
